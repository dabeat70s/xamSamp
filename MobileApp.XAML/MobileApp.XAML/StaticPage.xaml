<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Static" 
             xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="MobileApp.XAML.StaticPage">
    <ContentPage.Content>
        <StackLayout Padding="30,30">
            <BoxView Color="{x:Static Color.Maroon}" CornerRadius="20"  WidthRequest="150" HeightRequest="150" />
            <BoxView WidthRequest="150" HeightRequest="150">
                <BoxView.Color>
                    <x:Static>Color.Lime</x:Static>
                </BoxView.Color>
            </BoxView>
            <BoxView Color="DarkBlue" CornerRadius="20"  WidthRequest="150" HeightRequest="150" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>